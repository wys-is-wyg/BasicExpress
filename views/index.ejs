<%- include('partials/header'); %> 
			<div id="main">
				<div class="container-fluid">
				<div class="row">
					<div id="sidebar" class="col-md-4 col-sm-6">
						<%- include('partials/sidebar'); %>
					</div>  
					<main role="main" class="col-md-8 col-sm-6">
						<div id="news-list"></div>
						<h1>Gulp - Chat made easy</h1>
						<p>Login below or you can <a href="/register">register here.</a></p>
						<p>&nbsp;</p>
						<form action="/login" method="post">
							<div class="form-group">
								<label class="control-label">Email Address</label>
								<input id="sign-in-email" type="email" class="form-control" name="email" placeholder="Email" value="test@test.com">
							</div>
							<div class="form-group">
								<label class="control-label">Password</label>
								<input id="sign-in-password" type="password" class="form-control" name="password" placeholder="Password" value="testing">
							</div>
							<div class="form-group submit">
								<button id="sign-in" type="submit" class="btn btn-primary">Login</button>
							</div>
						<% if (locals.errors) { %>
							<% if (locals.errors.login) { %>
								<div class="errors">
									<% locals.errors.login.forEach(function(error) { %>
										<p><div class="alert alert-primary" role="alert"><%= error %></div></p>
									<% }) %>
								</div>
							<% } %>
						<% } %>
						</form> <!-- end login form -->
					</main>
				</div> <!-- end .row --> 
				</div><!-- end .container-fluid -->
			</div><!-- end #main -->
<%- include('partials/footer'); %>